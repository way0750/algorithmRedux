{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug TS File",
            "type": "node",
            "request": "launch",
            "args": ["${relativeFile}"],
            "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
        },
        {
            "name": "debug with node",
            "type": "node",
            "request": "launch",
            "program": "${file}",
            "sourceMaps": true
        }
    ]
}